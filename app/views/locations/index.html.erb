<%= form_tag locations_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>

<h1>Locations</h1>
<% for location in @locations %>
  <%= location.address %> &nbsp
  <%= link_to "Show", location %> <br>
<% end %>
