<h1>Locations</h1>
<p><%=@location.address%></p>

<hr>

<iframe width="300" height="300" frameborder="0" style="border:0"
 src="https://www.google.com/maps/embed/v1/place?key=<%=ENV['MAP_API_KEY']%>&q=<%=@location.latitude%>,<%=@location.longitude%>"
 allowfullscreen>
</iframe>

<h3>Recently Searched locations</h3>
<ul>
<% for location in @location.nearbys(10) %>
  <li><%= link_to location.address, location %> (<%= location.distance.round(2) %> miles) <br></li>
<% end %>
</ul>
